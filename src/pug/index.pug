	section.p-homeCategory#category
		.p-homeCategory_inner.l-inner
			.p-homeCategory_body
				h2.c-headingA
					span.en Category
					span.ja カテゴリーから探す
				ul.p-homeCategory_list
					li.p-homeCategory_item
						a.p-homeCategory_itemLink(href="#")
							span.p-homeCategory_itemIcon
								img(src=imgPath+"home/icon_category_01.svg", alt="")
