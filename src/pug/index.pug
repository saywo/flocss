							h3.p-homeCategory_itemName ディスプレイモニター
					li.p-homeCategory_item
						a.p-homeCategory_itemLink(href="#")
							span.p-homeCategory_itemIcon
								img(src=imgPath+"home/icon_category_04.svg", alt="")
							h3.p-homeCategory_itemName タブレット

	section.p-homeNewitem#newitem
		.p-homeNewitem_inner.l-inner
			.p-homeNewitem_body
				h2.c-headingA
					span.en New Item
					span.ja 新商品
				-
					const newItemArray = [
						{
							img:imgPath+"product/img_product_01.jpg",
							company:"LENOVO",
							name:"ThinkPad X1 Carbon 20KG-S0BN00",
							oldprice:"132,230",
							newprice:"111,111",
							tags:["未使用品","A4ノート"]
						},
						{
							img:imgPath+"product/img_product_01.jpg",
							company:"LENOVO",
							name:"ThinkPad X1 Carbon 20KG-S0BN00",
							oldprice:"132,230",
							newprice:"111,111",
							tags:["未使用品","A4ノート"]
						},
						{
							img:imgPath+"product/img_product_01.jpg",
							company:"LENOVO",
							name:"ThinkPad X1 Carbon 20KG-S0BN00",
							oldprice:"132,230",
							newprice:"111,111",
							tags:["中古品","A4ノート"]
						}
					];
				ul.p-homeNewitem_list
					each item in newItemArray
						li.p-homeNewitem_item.p-product
							a.p-homeNewitem_itemLink.p-product_link(href="")
								span.p-homeNewitem_itemImg.p-product_img
									img(src=imgPath+"product/img_product_01.jpg", alt="")
							.p-homeNewitem_itemHead.p-product_head
								p.p-homeNewitem_itemCompany.p-product_company #{item.company}
								h3.p-homeNewitem_itemName.p-product_name #{item.name}
							.p-homeNewitem_itemPrice.p-product_price
								p.old #{item.oldprice}（税込）
								p.new
									<span class="number">#{item.newprice}</span>円（税込）
							.p-product_tags
								each tag in item.tags
									span.c-tag #{tag}
				a.p-homeNewitem_button.c-buttonA(href="#")
					span.c-buttonA_text もっと見る

	section.p-homeSpecial#special
		.p-homeSpecial_inner.l-inner
			.p-homeSpecial_body
				h2.c-headingA
					span.en Specail
					span.ja 特集
				ul.p-homeSpecial_list
					li.p-homeSpecial_item.c-card
						a.p-homeSpecial_itemLink.c-card_inner(href="#")
							h3.p-homeSpecial_itemName.c-card_name テレワーク応援特集
							div.p-homeSpecial_itemImg.c-card_img.-ratioB
								img(src=imgPath+"special/img_special_01.jpg")
					li.p-homeSpecial_item.c-card
						a.p-homeSpecial_itemLink.c-card_inner(href="#")
							h3.p-homeSpecial_itemName.c-card_name ブラックフライデー特集
							div.p-homeSpecial_itemImg.c-card_img.-ratioB
								img(src=imgPath+"special/img_special_02.jpg")
				a.p-homeSpecial_button.c-buttonA(href="#")
					span.c-buttonA_text もっと見る

	section.p-homeReason
		.l-inner.p-homeReason_inner
			.p-homeReason_content
				.p-homeReason_body
					h2.p-homeReason_heading ブランド名が選ばれる理由
					p.p-homeReason_desc 安心の3年保証、商品到着後の7日間の返品受付可能など、<br class="u-hide-sm">〜が選ばれる理由をご紹介致します。<br class="u-hide-sm">ご利用頂いたお客さまの声も掲載しております。
					a.p-homeReason_button.c-buttonB(href="#")
